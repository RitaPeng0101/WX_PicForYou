<!--pages/my/mypage.wxml-->
<view class='contain'>
  <view class='header'>
    <view class='header-tx'>
      <open-data type="userAvatarUrl" wx:if="{{isLogin}}"></open-data>
      <view class='unLogin-tx' wx:else><text class='tx-icon daoke-icon icon-denglu'></text></view>
    </view>
    <view class='header-info'>
      <view class='info-login font-large' bindtap='toLogin' wx:if="{{!isLogin}}">登录/注册</view>
      <view class='info-login' wx:else><open-data type="userNickName" class="userNickName" lang="zh_CN"></open-data></view>
    </view> 
  </view>
  <view class='menus font-middle'>
    <view class='menus-top'>
      <view class='menus-item' hover-class='btn-click-242' bindtap="bindGetUserInfo"><text class='item-icon daoke-icon icon-dd' ></text><button class='item-title' open-type="getUserInfo" lang="zh_CN" bindtap="bindGetUserInfo">游客模式</button><text class='arrow daoke-icon icon-zhixiang'></text></view>
    </view>

    
    <view class='menus-top'>
      <view class='menus-item' hover-class='btn-click-242' bindtap="bindGetUserProfile"><text class='item-icon daoke-icon icon-dd' ></text><button class='item-title' lang="zh_CN" bindtap="bindGetUserProfile">一键授权</button><text class='arrow daoke-icon icon-zhixiang'></text></view>
    </view>

    <view class='menus-middle'>
      <view class='menus-item' hover-class='btn-click-242' bindtap='invoiceOpen'><text class='item-icon daoke-icon icon-fapiao-'></text><text class='item-title'>自定义选项</text><text class='arrow daoke-icon icon-zhixiang'></text></view>
      <view class='menus-item' hover-class='btn-click-242' bindtap='toSuggestion'><text class='item-icon daoke-icon icon-yijianfankui'></text><text class='item-title'>版本更新</text><text class='arrow daoke-icon icon-zhixiang'></text></view>
      <view class='menus-item' hover-class='btn-click-242' bindtap='contact'><text class='item-icon daoke-icon icon-icon-test'></text><text class='item-title'>意见反馈</text><text class='arrow daoke-icon icon-zhixiang'></text></view>
    </view>
    <view class='menus-bottom'>
      <view class='menus-item' hover-class='btn-click-242' bindtap='toReceiveCoupon'><text class='item-icon daoke-icon icon-zhuanfa'></text><text class='item-title'>清除缓存</text><text class='arrow daoke-icon icon-zhixiang'></text></view>
    </view>
    <view class='exit color-85' wx:if="{{isLogin}}" bindtap='exit' hover-class='btn-click-242'>退出登录</view>
  </view>
</view>